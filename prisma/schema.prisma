
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role{
  STAFF
  ADMIN
}

enum TimeRecordType{
  START
  STOP
}

model Organization{
  id String @id @default(uuid())
  name String
  cnpj String? @unique
  email String?
  phone String?
  address String?

  // Relações
  users User[]
  products Product[]
  categories Category[]
  stockEntries StockEntry[]
  stockExits StockExit[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category{
  id String @id @default(uuid())
  name String
  organizationId String
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([organizationId, name])
  @@index([organizationId])
}

model User{
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  role Role @default(ADMIN)

  // Relação: Organização (tenant)
  organizationId String
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Relação: STAFF vinculado ao ADMIN que o criou
  createdById String?
  createdBy User? @relation("StaffCreatedByAdmin", fields: [createdById], references: [id], onDelete: SetNull)
  staffCreated User[] @relation("StaffCreatedByAdmin")

  // Relação: Registros de ponto do usuário
  timeRecords TimeRecord[]

  // Relações de estoque
  stockEntries StockEntry[]
  stockExits StockExit[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([organizationId])
}

model TimeRecord{
  id String @id @default(uuid())
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  type TimeRecordType
  timestamp DateTime @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, timestamp])
}

model Product{
  id String @id @default(uuid())
  organizationId String
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Identificação
  name String
  code String?
  sku String?
  category String?

  // Estoque
  currentStock Int @default(0)
  minStock Int @default(0)
  unit String @default("UN")

  // Preços
  costPrice Decimal? @db.Decimal(10, 2)
  averageCost Decimal? @db.Decimal(10, 2)

  // Status
  active Boolean @default(true)

  // Relações
  stockEntries StockEntry[]
  stockExits StockExit[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([organizationId])
  @@index([organizationId, category])
}

model StockEntry{
  id String @id @default(uuid())
  organizationId String
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  productId String
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  // Dados da entrada
  quantity Int
  unitPrice Decimal @db.Decimal(10, 2)
  totalPrice Decimal @db.Decimal(10, 2)

  // Fornecedor
  supplierName String?
  supplierDoc String?

  // Nota fiscal
  invoiceNumber String?

  // Usuário que registrou
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Observações
  notes String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([organizationId, createdAt])
  @@index([organizationId, productId])
}

model StockExit{
  id String @id @default(uuid())
  organizationId String
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  productId String
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  // Dados da saída
  quantity Int

  // Onde foi usado
  projectName String?
  clientName String?
  serviceType String?

  // Usuário que registrou
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Observações
  notes String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([organizationId, createdAt])
  @@index([organizationId, productId])
}