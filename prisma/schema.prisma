
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role{
  STAFF
  ADMIN
}

model User{
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  role Role @default(ADMIN)

  // Relação: STAFF vinculado ao ADMIN que o criou
  createdById String?
  createdBy User? @relation("StaffCreatedByAdmin", fields: [createdById], references: [id], onDelete: SetNull)
  staffCreated User[] @relation("StaffCreatedByAdmin")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}